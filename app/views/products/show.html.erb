<h1>Opportunities</h1>

<p>
  <b>Name</b><br>
  <%= @product.name %>
</p>

<p>
  <b>Donation Requested</b><br>
  $<%= @product.price %>
</p>

<p>
  <b>Amount Fulfilled</b><br>
  $<%= @product.amount_fulfilled %>
</p>

<p>
  <% if @product.donations.any? %>
  <h3>Donations</h3>
  <ol class="donations">
    <%= render @product.donations %>
  </ol>
  <% end %>
</p>

<div class="form-actions">
  <%= link_to 'Back', products_path, :class => 'btn'  %>
  <% if can? :update, @product %>
    <%= link_to 'Edit', edit_product_path(@product), :class => 'btn' %>
  <% end %>
  <% if can? :update, @product %>
    <%= link_to 'Delete', product_path(@product), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
  <% end %>
</div>