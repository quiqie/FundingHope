<h1>Listing donations</h1>

<table class="table table-striped">
<thead>
  <tr>
    <th>Date Created</th>
    <th>Donor</th>
    <th>Cause</th>
    <th>Amount</th>
    <th>Paid Out</th>
    <th>Need Fulfilled</th>
    <th>Thank You Sent</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @donations.each do |donation| %>
  <tr>
    <td><%= donation.created_at %></td>
    <td><%= Organization.find(donation.organization_id).name %></td>
    <td><%= Product.find(donation.product_id).name %></td>
    <td><%= donation.amount %></td>
    <td><%= donation.paid_out %></td>
    <td><%= donation.fulfilled %></td>
    <td><%= donation.thankyou %></td>
    <td><%= link_to 'Show', donation, :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_donation_path(donation), :class => 'btn btn-mini' %></td>
    <td>

		<%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>


    </td>
  </tr>
<%end%>
</tbody>
</table>

<br />

<%= link_to 'New Donation', new_donation_path, :class => 'btn btn-primary' %>
